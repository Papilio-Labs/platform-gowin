{
  "name": "gowin",
  "title": "Gowin FPGA",
  "description": "Gowin FPGA development platform with support for Gowin Educational IDE and open-source toolchains. Supports pure FPGA projects and dual-target projects (MCU + FPGA).",
  "homepage": "https://www.gowinsemi.com/",
  "license": "Apache-2.0",
  "keywords": [
    "fpga",
    "gowin",
    "gateware",
    "hardware",
    "verilog",
    "systemverilog",
    "vhdl",
    "hdl",
    "tang",
    "sipeed"
  ],
  "engines": {
    "platformio": "^6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/platform-gowin.git"
  },
  "version": "1.0.0",
  "frameworks": {
    "hdl": {
      "package": "framework-hdl",
      "script": "builder/frameworks/hdl.py",
      "description": "Pure HDL (Verilog/SystemVerilog/VHDL) FPGA development",
      "homepage": "https://www.gowinsemi.com/",
      "title": "HDL"
    },
    "verilog": {
      "package": "framework-hdl",
      "script": "builder/frameworks/hdl.py",
      "description": "Alias for 'hdl' framework - supports Verilog/SystemVerilog/VHDL",
      "homepage": "https://www.gowinsemi.com/",
      "title": "Verilog (HDL)"
    },
    "arduino": {
      "package": "framework-arduinoespressif32",
      "script": "builder/frameworks/arduino.py",
      "description": "Arduino Framework for dual-target boards (ESP32 + FPGA)",
      "homepage": "https://github.com/espressif/arduino-esp32",
      "title": "Arduino"
    }
  },
  "packages": {
    "toolchain-gowin": {
      "type": "toolchain",
      "optional": false,
      "version": "~1.9.9",
      "description": "Gowin EDA Toolchain (synthesis, place & route, bitstream generation)"
    },
    "tool-gowin-programmer": {
      "type": "uploader",
      "optional": true,
      "version": "~1.9.9",
      "description": "Gowin Programmer tool for FPGA configuration"
    },
    "tool-pesptool": {
      "type": "uploader",
      "optional": true,
      "version": "~1.0.0",
      "description": "pesptool - FPGA programmer via ESP32 SPI bridge"
    },
    "tool-openfpgaloader": {
      "type": "uploader",
      "optional": true,
      "version": "~0.12.0",
      "description": "Universal FPGA programmer (open source)"
    },
    "framework-verilog": {
      "type": "framework",
      "optional": true,
      "version": "~1.0.0",
      "description": "Verilog/SystemVerilog framework for FPGA development"
    },
    "framework-arduinoespressif32": {
      "type": "framework",
      "optional": true,
      "version": "~3.0.0",
      "description": "Arduino Framework for ESP32 (for dual-target boards)"
    },
    "tool-esptoolpy": {
      "type": "uploader",
      "optional": true,
      "version": "~1.40700.0",
      "description": "esptool.py - ESP32 flasher tool"
    }
  },
  "packageRepositories": [
    "https://dl.bintray.com/platformio/dl-packages/manifest.json",
    "https://raw.githubusercontent.com/platformio/platform-gowin/main/packages.json",
    "http://dl.platformio.org/packages/manifest.json"
  ]
}
