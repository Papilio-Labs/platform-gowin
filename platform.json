{
  "name": "gowin",
  "title": "Gowin FPGA",
  "description": "Gowin FPGA development platform with support for Gowin Educational IDE and open-source toolchains. Supports pure FPGA projects and dual-target projects (MCU + FPGA).",
  "homepage": "https://www.gowinsemi.com/",
  "license": "Apache-2.0",
  "keywords": [
    "fpga",
    "gowin",
    "gateware",
    "hardware",
    "verilog",
    "systemverilog",
    "vhdl",
    "hdl",
    "tang",
    "sipeed"
  ],
  "engines": {
    "platformio": "^6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Papilio-Labs/platform-gowin.git"
  },
  "version": "1.0.0",
  "frameworks": {
    "hdl": {
      "script": "builder/frameworks/hdl.py",
      "description": "Pure HDL (Verilog/SystemVerilog/VHDL) FPGA development",
      "homepage": "https://www.gowinsemi.com/",
      "title": "HDL"
    },
    "verilog": {
      "script": "builder/frameworks/hdl.py",
      "description": "Alias for 'hdl' framework - supports Verilog/SystemVerilog/VHDL",
      "homepage": "https://www.gowinsemi.com/",
      "title": "Verilog (HDL)"
    },
    "arduino": {
      "package": "framework-arduinoespressif32",
      "script": "builder/frameworks/arduino.py",
      "description": "Arduino Framework for dual-target boards (ESP32 + FPGA)",
      "homepage": "https://github.com/espressif/arduino-esp32",
      "title": "Arduino"
    }
  },
  "packages": {
    "toolchain-gowin": {
      "type": "toolchain",
      "optional": true,
      "version": "~1.9.9",
      "description": "Gowin EDA Toolchain (synthesis, place & route, bitstream generation)"
    },
    "framework-arduinoespressif32": {
      "type": "framework",
      "optional": true,
      "version": "*",
      "description": "Arduino Framework for ESP32 (for dual-target boards)"
    },
    "toolchain-xtensa-esp32s3": {
      "type": "toolchain",
      "optional": true,
      "version": "~12.2.0",
      "description": "GCC toolchain for Xtensa ESP32-S3"
    },
    "toolchain-riscv32-esp": {
      "type": "toolchain",
      "optional": true,
      "version": "~12.2.0",
      "description": "GCC toolchain for RISC-V ESP32"
    },
    "tool-esptoolpy": {
      "type": "uploader",
      "optional": true,
      "version": "~1.40600.0",
      "description": "ESP-IDF esptool.py for flashing ESP32"
    },
    "tool-openocd-esp32": {
      "type": "debugger",
      "optional": true,
      "version": "~2.1100.0",
      "description": "OpenOCD for ESP32 debugging"
    }
  },
  "packageRepositories": [
    "https://dl.bintray.com/platformio/dl-packages/manifest.json",
    "https://raw.githubusercontent.com/platformio/platform-gowin/main/packages.json",
    "http://dl.platformio.org/packages/manifest.json"
  ]
}
